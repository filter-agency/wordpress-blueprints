{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/admin.php?page=personalizewp",
    "steps": [
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "Filter AI Demo",
                "blogdescription": "Testing WordPress Playground Blueprints!"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://github-proxy.com/proxy/?repo=woocommerce/woocommerce&release=latest&asset=woocommerce.zip"
            }
        },
        {
            "step": "writeFile",
            "path": "/wordpress/wp-content/mu-plugins/rewrite.php",
            "data": "<?php /* Use pretty permalinks */ add_action( 'after_setup_theme', function() { global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); $wp_rewrite->flush_rules(); } );"
        },
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "WooCommerce",
                "woocommerce_store_city": "London",
                "woocommerce_store_address": "124 City Road",
                "woocommerce_store_postcode": "EC1V 2NX",
                "woocommerce_default_country": "United Kingdom",
                "woocommerce_onboarding_profile": {
                    "skipped": true
                },
                "woocommerce_currency": "GBP",
                "woocommerce_weight_unit": "kg",
                "woocommerce_dimension_unit": "cm",
                "woocommerce_allow_tracking": "no",
                "woocommerce_cheque_settings": {
                    "enabled": "yes"
                }
            }
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/woocommerce/woocommerce/refs/heads/trunk/plugins/woocommerce/sample-data/sample_products.xml"
            }
        },
        {
          "step": "installPlugin",
          "pluginZipFile": {
              "resource": "wordpress.org/plugins",
              "slug": "personalizewp"
          },
          "options": {
              "activate": true
          }
      },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://github-proxy.com/proxy/?repo=filter-agency/personalizewp-pro&release=latest&asset=personalizewp-pro.zip"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        }
    ]
}